<idea-plugin>
    <id>com.ahmedmourad.mirror.idea-plugin</id>
    <name>Mirror Compiler</name>
    <vendor email="dev.ahmedmourad73744@gmail.com" url="https://www.ahmedmourad.com">Ahmed Mourad</vendor>

    <description><![CDATA[
    The IDEA plugin for Mirror, a Kotlin compiler plugin that enables using data classes as value-based classes.<br>
    <a href="https://github.com/AhmedMourad0/Mirror">Visit on Github</a>
    ]]></description>

    <depends>org.jetbrains.kotlin</depends>

    <extensions defaultExtensionNs="org.jetbrains.kotlin">
        <syntheticResolveExtension
                implementation="com.ahmedmourad.mirror.idea.MirrorIdeSyntheticResolveExtension"
                order="first"
        />
    </extensions>

    <extensions defaultExtensionNs="com.intellij">
        <lang.inspectionSuppressor
                language="kotlin"
                implementationClass="com.ahmedmourad.mirror.idea.DataClassPrivateConstructorInspectionSuppressor"
                order="last"
        />
    </extensions>

</idea-plugin>
